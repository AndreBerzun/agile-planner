{
  "name": "agile-planner",
  "version": "1.0.0",
  "private": false,
  "author": {
    "name": "Andr√© Berzun | Lianto Engineering",
    "email": "info@lianto-sd.de"
  },
  "main": "electron.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "electron": "electron .",
    "electron:package": "ng build --base-href ./ && electron-builder build --linux"
  },
  "build": {
    "appId": "ch.lianto.agile-planner",
    "productName": "Agile Planner",
    "directories": {
      "output": "dist/"
    },
    "files": [
      "electron.js",
      "dist/agile-planner/browser/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icons"
    }
  },
  "dependencies": {
    "@angular/cdk": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.14",
    "@angular/material-moment-adapter": "^19.2.14",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@schematics/angular": "^19.2.0",
    "bootstrap": "^5.3.5",
    "date-fns": "^4.1.0",
    "ngx-bootstrap": "^19.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.10",
    "@angular/cli": "^19.2.10",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jest": "^29.5.14",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.5.5",
    "ts-jest": "^29.3.4",
    "typescript": "~5.7.2"
  }
}
